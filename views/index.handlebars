<h1>Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless hungry}}
      {{> burgers/burger-block hunger=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if hungry}}
      {{> burgers/burger-block hunger=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <div class="form-group">
    <label for="hungry">Hungry?</label><br>
    <input type="radio" name="hungry" value="1" checked> Hungry!<br>
    <input type="radio" name="hungry" value="0"> Not Hungry
  </div>

  <button type="submit">Add burger</button>
</form>
